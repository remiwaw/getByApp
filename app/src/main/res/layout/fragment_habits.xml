<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".habits.HabitsFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.rwawrzyniak.getby.customview.DaysHeaderView
        android:id="@+id/daysHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:firstDayAsString="17-02-2020"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </com.rwawrzyniak.getby.customview.DaysHeaderView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daysListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daysHeaderView"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
